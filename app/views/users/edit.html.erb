<%= turbo_frame_tag 'user' do %>
  <%= form_for current_user, url: users_url, html: { class: 'flex flex-col items-center', 'data-controller': 'user-edit' } do |f| %>

    <%= f.text_field :name, class: 'border-slate-300 rounded-2xl' %>
    <%= f.text_field :email, class: 'border-slate-300 rounded-2xl mt-2' %>

    <div class="mt-4"> New password </div>

    <%= f.password_field :password, class: 'border-slate-300 rounded-2xl mt-2' %>

    <div class="w-full flex justify-end mt-5">
      <%= link_to 'Back', users_url, class: 'btn-secondary mr-3' %>
      <%= f.submit 'Save', class: 'btn-primary' %>
    </div>

  <% end %>

<% end %>
