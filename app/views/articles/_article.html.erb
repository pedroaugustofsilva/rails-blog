<div id="<%= dom_id article %>" class="mb-10">
  <h3 class="text-2xl font-medium text-slate-800">
    <%= link_to article do %>
      <%= article.title %>
    <% end %>
    <% if user_signed_in? %>
      <%= link_to edit_article_path(article) do %>
        <%= image_tag('icons/edit-icon.svg', class: 'ml-3 inline') %>
      <% end %>
    <% end %>
  </h3>

  <p class="text-sm text-slate-500"><%= article.created_at.strftime('%B %d, %Y') %></p>

  <div class="mt-3 text-lg text-slate-700">
    <%= truncate strip_tags(article.content.body.to_s), length: 200 %>
    <%= link_to 'Continue reading', article, class: "text-blue-500"%>
  </div>
</div>
